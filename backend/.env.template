# Zodie Backend - Production Environment Configuration Template
# Copy this file to .env and fill in the appropriate values

# Environment
ENVIRONMENT=production
VERSION=1.0.0

# API settings
API_V1_STR=/api/v1

# Token settings
ACCESS_TOKEN_SECRET_KEY=your-access-token-secret-key-here
REFRESH_TOKEN_SECRET_KEY=your-refresh-token-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Project settings
PROJECT_NAME=Zodie

# Clerk Authentication
CLERK_SECRET_KEY=your-clerk-secret-key-here

# CORS configuration (comma-separated list of allowed origins)
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File storage settings
STORAGE_TYPE=s3  # Options: local, s3
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes

# AWS S3 settings (for production)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=your-aws-region
AWS_BUCKET_NAME=your-bucket-name

# Database settings
DATABASE_URL=postgresql+asyncpg://username:password@hostname:port/database
DATABASE_MAX_CONNECTIONS=20
DATABASE_POOL_SIZE=10

# Logging settings
LOG_LEVEL=INFO

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Cleanup settings
TEMP_FILE_RETENTION_DAYS=7
